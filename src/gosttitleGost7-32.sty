

\renewcommand*\NirManager[3][.49]{ % Подпись научного руководителя
    \renewcommand\Nir@ManagerPost{#2} \renewcommand\Nir@ManagerName{#3}
    \renewcommand\Nir@ManagerStamp{
        \parbox[b]{#1\linewidth}{
            \raggedright\Nir@ManagerPost
        }
        \hspace{3em}\ulfill~\Nir@ManagerName
    }
} 
\renewcommand*\NirIsp[3][0.49]{  % Подпись главного исполнителя
    \renewcommand\Nir@IspPost{#2}\renewcommand\Nir@IspName{#3}
    \renewcommand\Nir@IspStamp[1]{
        \parbox[b]{#1\linewidth}{
            \raggedright\Nir@IspPost
        }
            \hspace{3em}\ulfill~\Nir@IspName
        
    }
} 

\newlength{\savedparskip}

\renewenvironment*{titlepage}{
    \setlength{\savedparskip}{\parskip}
    \setlength{\parskip}{0\p@ \@plus \p@}
    \thispagestyle{empty}
    \linespread{1.1}\normalsize
    \hfill \Nir@Grif

    \hfill \Nir@Ekz
    \vspace{-3ex}
        \IfFileExists{logo.pdf}{      % logo for first page (no compatible with GOST)
        \begin{flushleft}
            \parbox[t]{.3\linewidth}{
                \vspace{-5ex}\center{\includegraphics[width=.99\linewidth]{logo}}\\
            }
            {{\Nir@OrgLongName}}  % name of Institute

        \end{flushleft}
        }{
        \begin{center}
            {{\Nir@OrgLongName}} % name of Institute
        \end{center}
    }
    \begin{centering}

        \vspace{3ex}

        \parbox[t]{.45\linewidth}{
            \Nir@UdkName\\ % УДК
            \Nir@No\\       % Рег. номер
            \Nir@InventarNo\\ %Инв. номер
        }
        \hfill\Nir@BossStamp

        \vfill

        \MakeUppercase{\Nir@AnnOtchet \Nir@ReportName}\\ % Название отчета
        \MakeUppercase{\Nir@About}         % О чем отчет

        \vspace{2ex}
        \Nir@TitleAndSubject          % Предмет отчет

        (\Nir@StageType)              % Тип отчета

        \Nir@Code % Код отчета

        \vspace{2ex}
        \Nir@PartNum

        \vfill

        \Nir@ManagerStamp % Подпись научного руководителя

        \vspace{2ex}

        \Nir@IspStamp % Подпись ответсвенного исполнителя


        \vfill

        \vfill

        \Nir@Town~\Nir@Year % Город и год написания отчета

    \end{centering}
    \linespread{\Gost@LineSpread}\normalsize
    \setlength{\parskip}{\savedparskip}
}



